        <p>Menu desktop e mobile replicados no estilo do site original.</p>
    </main>

    <script>
        const BREAKPOINT = 767;
        const BANNER_DESKTOP = 650;
        const BANNER_MOBILE = 340;

        const bodyEl = document.body;
        const desktopNav = document.getElementById("desktop-nav");
        const mobileNav = document.getElementById("mobile-nav");
        const mobileBtn = document.getElementById("mobileMenuButton");
        const headerBanner = document.getElementById("headerBanner");
        const topbarDesktop = document.querySelector(".topbar .container");
        const topbarMobile = document.getElementById("topbar-mobile");
        const lockButton = document.getElementById("lockButton");
        const lockPopup = document.getElementById("lockPopup");
        const topbarLinks = document.querySelectorAll(".topbar-link");

        let mobileCreated = false;

        /* CLONAR MENU DESKTOP PARA MOBILE */
        function createMobileMenu() {
            if (mobileCreated) return;
            const ul = desktopNav.querySelector("ul");
            if (!ul) return;

            const clone = ul.cloneNode(true);
            const inner = document.createElement("div");
            inner.className = "mobile-inner";
            inner.appendChild(clone);
            mobileNav.appendChild(inner);

            inner.querySelectorAll("li").forEach(li => {
                const a = li.querySelector("a");
                const submenu = li.querySelector(".submenu");

                if (!a) return;

                a.addEventListener("click", e => {
                    const isMobile = window.innerWidth <= BREAKPOINT;

                    if (isMobile && submenu) {
                        e.preventDefault();

                        inner.querySelectorAll("li").forEach(other => {
                            if (other !== li) other.classList.remove("active");
                        });

                        li.classList.toggle("active");
                        return;
                    }

                    if (!submenu) closeMobileMenu();
                });
            });

            mobileCreated = true;
        }

        /* BANNER NÃO É MAIS TRANSLADADO (sem espaço branco) */
        function refreshBannerOffset() {
            headerBanner.style.transform = "translateY(0)";
        }

        function openMobileMenu() {
            createMobileMenu();
            mobileNav.classList.add("open");
            bodyEl.classList.add("menu-open");
            refreshBannerOffset();
        }

        function closeMobileMenu() {
            mobileNav.classList.remove("open");
            bodyEl.classList.remove("menu-open");
            mobileNav.querySelectorAll("li.active").forEach(li => li.classList.remove("active"));
            refreshBannerOffset();
        }

        /* DESKTOP / MOBILE SWITCH */
        function updateLayout() {
            const isMobile = window.innerWidth <= BREAKPOINT;

            if (isMobile) {
                topbarLinks.forEach(a => a.style.display = "none");
                topbarMobile.style.display = "block";
                mobileBtn.style.display = "flex";
                desktopNav.style.display = "none";
                headerBanner.style.minHeight = BANNER_MOBILE + "px";

                createMobileMenu();
                refreshBannerOffset();
            } else {
                topbarLinks.forEach(a => a.style.display = "");
                topbarMobile.style.display = "none";
                mobileBtn.style.display = "none";
                desktopNav.style.display = "flex";

                closeMobileMenu();
                headerBanner.style.minHeight = BANNER_DESKTOP + "px";
                headerBanner.style.transform = "translateY(0)";
            }
        }

        /* DESKTOP SUBMENU */
        desktopNav.querySelectorAll("li > a.has-sub").forEach(link => {
            link.addEventListener("click", e => {
                e.preventDefault();
                const li = link.parentElement;

                desktopNav.querySelectorAll("li.active").forEach(other => {
                    if (other !== li) other.classList.remove("active");
                });

                li.classList.toggle("active");
            });
        });

        /* CLICK FORA PARA FECHAR SUBMENUS/MOBILE/ACESSO */
        document.addEventListener("click", e => {

            if (!desktopNav.contains(e.target)) {
                desktopNav.querySelectorAll("li.active").forEach(li => li.classList.remove("active"));
            }

            if (mobileNav.classList.contains("open") &&
                !mobileNav.contains(e.target) &&
                !mobileBtn.contains(e.target)) {
                closeMobileMenu();
            }

            if (lockPopup.classList.contains("open") &&
                !lockPopup.contains(e.target) &&
                !lockButton.contains(e.target)) {
                lockPopup.classList.remove("open");
            }
        });

        mobileBtn.addEventListener("click", () => {
            if (mobileNav.classList.contains("open")) closeMobileMenu();
            else openMobileMenu();
        });

        /* ACESSO (texto + ícone clicáveis) */
        lockButton.addEventListener("click", e => {
            e.stopPropagation();
            lockPopup.classList.toggle("open");
        });

        window.addEventListener("resize", updateLayout);
        window.addEventListener("load", updateLayout);
    </script>

</body>
</html>
