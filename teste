    <script>
        const toggleBtn = document.querySelector('.mobile-menu-toggle');
        const nav = document.querySelector('nav.main-nav');
        const menuItems = nav.querySelectorAll('li > a');

        // Abrir menu mobile
        toggleBtn.addEventListener('click', () => {
          nav.classList.toggle('mobile-active');
        });

        // Submenus clicáveis
        menuItems.forEach(item => {
          item.addEventListener('click', (e) => {
            const parentLi = item.parentElement;
            const submenu = parentLi.querySelector('.submenu');

            // Se tiver submenu, abre/fecha
            if(submenu) {
              e.preventDefault(); // evita link
              // Fecha outros submenus
              nav.querySelectorAll('li.active').forEach(li => {
                if(li !== parentLi) li.classList.remove('active');
              });
              parentLi.classList.toggle('active');
            }
          });
        });

        // Fecha submenu ao clicar fora
        document.addEventListener('click', (e) => {
          if(!nav.contains(e.target)) {
            nav.querySelectorAll('li.active').forEach(li => li.classList.remove('active'));
          }
        });
    </script>

