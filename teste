    <script>
        const BREAKPOINT = 767;

        const desktopLinks = document.querySelectorAll(".topbar-desktop");
        const topbarMobile = document.getElementById("topbar-mobile");
        const lockButton = document.getElementById("lockButton");
        const lockPopup = document.getElementById("lockPopup");

        const mobileButton = document.getElementById("mobileMenuButton");
        const mobileNav = document.getElementById("mobile-nav");
        const desktopNav = document.getElementById("desktop-nav");

        /* ACESSO */
        lockButton.addEventListener("click", (e) => {
            e.stopPropagation();
            lockPopup.classList.toggle("open");
        });

        document.addEventListener("click", (e) => {
            if (!lockPopup.contains(e.target) && !lockButton.contains(e.target)) {
                lockPopup.classList.remove("open");
            }
        });

        /* DESKTOP vs MOBILE */
        function updateLayout() {
            const isMobile = window.innerWidth <= BREAKPOINT;

            if (isMobile) {
                // Esconde os links da topbar e o menu desktop
                desktopLinks.forEach(l => l.style.display = "none");
                desktopNav.style.display = "none";

                // Mostra "Acesso" mobile e botão hamburguer
                topbarMobile.style.display = "block";
                mobileButton.style.display = "flex";
            } else {
                // Desktop normal
                desktopLinks.forEach(l => l.style.display = "inline-flex");
                desktopNav.style.display = "flex";
                topbarMobile.style.display = "none";
                mobileButton.style.display = "none";

                // Garante menu mobile fechado
                mobileNav.classList.remove("open");
                document.body.classList.remove("menu-open");
                mobileNav.querySelectorAll("li.has-sub").forEach(li => li.classList.remove("active"));
            }
        }

        window.addEventListener("resize", updateLayout);
        window.addEventListener("load", updateLayout);

        /* BOTÃO HAMBURGUER */
        mobileButton.addEventListener("click", () => {
            const isOpen = mobileNav.classList.contains("open");
            if (isOpen) {
                mobileNav.classList.remove("open");
                document.body.classList.remove("menu-open");
                mobileNav.querySelectorAll("li.has-sub").forEach(li => li.classList.remove("active"));
            } else {
                mobileNav.classList.add("open");
                document.body.classList.add("menu-open");
            }
        });

        /* SUBMENUS MOBILE – apenas 1 aberto por vez */
        document.querySelectorAll(".mobile-toggle").forEach(link => {
            link.addEventListener("click", (e) => {
                e.preventDefault();
                const li = link.closest("li.has-sub");

                mobileNav.querySelectorAll("li.has-sub").forEach(other => {
                    if (other !== li) other.classList.remove("active");
                });

                li.classList.toggle("active");
            });
        });

        /* SUBMENU DESKTOP */
        desktopNav.querySelectorAll("a.has-sub").forEach(link => {
            link.addEventListener("click", (e) => {
                e.preventDefault();
                const li = link.parentElement;

                desktopNav.querySelectorAll("li").forEach(other => {
                    if (other !== li) other.classList.remove("active");
                });

                li.classList.toggle("active");
            });
        });

        /* Fecha submenu desktop clicando fora */
        document.addEventListener("click", (e) => {
            if (!desktopNav.contains(e.target)) {
                desktopNav.querySelectorAll("li").forEach(li => li.classList.remove("active"));
            }
        });
    </script>

</body>
