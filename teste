    <script>
        const BREAKPOINT = 767;

        const bodyEl = document.body;
        const desktopNav = document.getElementById("desktop-nav");
        const mobileNav = document.getElementById("mobile-nav");
        const mobileBtn = document.getElementById("mobileMenuButton");
        const headerBanner = document.getElementById("headerBanner");

        let mobileCreated = false;

        /* CLONA MENU */
        function createMobileMenu() {
            if (mobileCreated) return;

            const ul = desktopNav.querySelector("ul").cloneNode(true);

            const inner = document.createElement("div");
            inner.classList.add("mobile-inner");
            inner.appendChild(ul);

            mobileNav.appendChild(inner);

            inner.querySelectorAll("li").forEach(li => {
                const a = li.querySelector("a");
                const submenu = li.querySelector(".submenu");

                if (!a) return;

                a.addEventListener("click", e => {
                    const isMobile = window.innerWidth <= BREAKPOINT;

                    if (isMobile && submenu) {
                        e.preventDefault();
                        li.classList.toggle("active");

                        inner.querySelectorAll("li")
                            .forEach(other => { if (other !== li) other.classList.remove("active") });

                        refreshBannerOffset();
                        return;
                    }
                });
            });

            mobileCreated = true;
        }

        /* CALCULA DESLOCAMENTO (banner desce) */
        function refreshBannerOffset() {
            const isMobile = window.innerWidth <= BREAKPOINT;

            if (!isMobile || !mobileNav.classList.contains("open")) {
                headerBanner.style.marginTop = "0px";
                return;
            }

            const inner = mobileNav.querySelector(".mobile-inner");
            if (!inner) return;

            const extraGap = 20;
            const total = inner.offsetHeight + extraGap;

            headerBanner.style.marginTop = total + "px";
        }

        /* ABRIR MENU */
        function openMobileMenu() {
            createMobileMenu();
            mobileNav.classList.add("open");
            bodyEl.classList.add("menu-open");
            refreshBannerOffset();
        }

        /* FECHAR MENU */
        function closeMobileMenu() {
            mobileNav.classList.remove("open");
            bodyEl.classList.remove("menu-open");

            mobileNav.querySelectorAll("li.active")
                .forEach(li => li.classList.remove("active"));

            refreshBannerOffset();
        }

        /* UPDATE LAYOUT */
        function updateLayout() {
            const isMobile = window.innerWidth <= BREAKPOINT;

            if (isMobile) {
                document.querySelectorAll(".topbar .container a")
                    .forEach(a => a.style.display = "none");

                document.getElementById("topbar-mobile").style.display = "block";
                mobileBtn.style.display = "flex";
                desktopNav.style.display = "none";

                createMobileMenu();
                refreshBannerOffset();

            } else {
                document.querySelectorAll(".topbar .container a")
                    .forEach(a => a.style.display = "");

                document.getElementById("topbar-mobile").style.display = "none";
                mobileBtn.style.display = "none";
                desktopNav.style.display = "flex";

                closeMobileMenu();
            }
        }

        /* EVENTOS */
        mobileBtn.addEventListener("click", () => {
            if (mobileNav.classList.contains("open")) closeMobileMenu();
            else openMobileMenu();
        });

        window.addEventListener("resize", () => {
            updateLayout();
            refreshBannerOffset();
        });

        window.addEventListener("load", updateLayout);
    </script>

</body>
</html>
