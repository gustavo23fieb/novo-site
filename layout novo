    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            const toggle = document.getElementById("ftMenuToggle");
            const nav = document.getElementById("ftMainNav");
            const submenuBtns = document.querySelectorAll(".ft-has-submenu > button");

            if (toggle && nav) {
                toggle.addEventListener("click", () => {
                    nav.classList.toggle("open");
                });
            }

            submenuBtns.forEach(btn => {
                btn.addEventListener("click", e => {
                    if (window.innerWidth <= 768) {
                        e.preventDefault();
                        const submenu = btn.parentElement.querySelector(".ft-submenu");
                        submenu.classList.toggle("open");
                    }
                });
            });

            window.addEventListener("resize", () => {
                if (window.innerWidth > 768 && nav) {
                    nav.classList.remove("open");
                    document
                        .querySelectorAll(".ft-submenu")
                        .forEach(sm => sm.classList.remove("open"));
                }
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
